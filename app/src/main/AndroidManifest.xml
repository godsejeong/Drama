<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.wark.drama">
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:fitsSystemWindows="true"
        android:hardwareAccelerated="true">
        <activity android:name=".MainActivity"
            android:theme="@style/NoActionBar"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".Video"
                  android:configChanges="keyboard|keyboardHidden|orientation|orientation|screenSize"/>
        <activity android:name=".Video_connect"/>
        <activity android:name=".Search"
            android:label=""
            android:theme="@style/AppSearch"/>
        <activity android:name=".Popup" android:theme="@android:style/Theme.Dialog" />
    </application>
</manifest>